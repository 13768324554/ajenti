<widgets xmlns="http://www.w3.org/1999/xhtml"
         xmlns:xi="http://www.w3.org/2001/XInclude"
         xmlns:py="http://genshi.edgewall.org/"
         py:strip="" >


<!--! Top logo widget -->
<py:match path="topbar">
    <span class="ui-logo"><img src="/dl/core/ui/logo.png" /></span>
</py:match>


<!--! Widget for Category -->
<py:match path="category">
    <a href="#" onclick="javascript:ajax('/handle/category/click/${select('@id')}');">
	    <div class="${'ui-el-category-selected' if str(select('@selected'))=='true' else 'ui-el-category'}">
		    <table>
                <tr>
                    <td rowspan="2" class="ui-el-category-icon">
                        <img src="${select('@icon')}" />
                    </td>
                    <td class="ui-el-category-text">${select('@text')}</td>
                </tr>
                <tr>
                    <td class="ui-el-category-description">${select('@description')}</td>
                </tr>
            </table>
        </div>
    </a>
</py:match>


<!--! VContainer widget -->
<py:match path="vcontainer">
    <table cellspacing="0" cellpadding="0">
        ${select('node()')}
    </table>
</py:match>
<py:match path="vnode">
    <tr><td>${select('node()')}</td></tr>
</py:match>


<!--! HContainer widget -->
<py:match path="hcontainer">
    <table cellspacing="0" cellpadding="0">
        <tr>
            ${select('node()')}
        </tr>
    </table>
</py:match>
<py:match path="hnode">
    <td>${select('node()')}</td>
</py:match>


<!--! Spacer -->
<py:match path="spacer">
    <div style="width: ${select('@width')}px; height: ${select('@height')}px;" />
</py:match>

<py:match path="test">
  <div>
    <span>${select('@name')}</span>
    <span py:with="p='123'" py:content="p"></span>
  </div>
</py:match>


<!--! Label widget -->
<py:match path="label">
    <span class="ui-el-label-${select('@size')}">
        ${select('@text')}
    </span>
</py:match>


<!--! Button widget -->
<py:match path="button">
    <a href="#" onclick="javascript:ajax('/handle/button/click/${select('@id')}');">
        <div class="ui-el-button">
            ${select('@text')}
        </div>
    </a>
</py:match>


<!--! LinkLabel widget -->
<py:match path="linklabel">
    <a href="#" onclick="javascript:ajax('/handle/linklabel/click/${select('@id')}');">
        <span class="ui-el-link">
            ${select('@text')}
        </span>
    </a>
</py:match>


<!--! Action widget -->
<py:match path="action">
    <a href="#" onclick="javascript:ajax('/handle/action/click/${select('@id')}');">
        <div class="ui-el-action">
            <table>
                <tr>
                    <td rowspan="2" class="ui-el-action-icon">
                        <img src="${select('@icon')}" />
                    </td>
                    <td class="ui-el-action-text">
                        ${select('@text')}
                    </td>
                </tr>
                <tr>
                    <td class="ui-el-action-description">
                        ${select('@description')}
                    </td>
                </tr>
            </table>
        </div>
    </a>
</py:match>


<!--! TextInput widget -->
<py:match path="textinput">
    <input class="ui-el-input" value="${select('@value')}" id="${select('@id')}" />
</py:match>


<!--! CheckBox widget -->
<py:match path="checkbox">
    <input class="ui-el-checkbox" type="checkbox" value="${select('@value')}" name="${select('@name')}" id="${select('@id')}" checked="${str(select('@checked')) or None}" />
    <span class="ui-el-label-1">
            ${select('@text')}
    </span>
</py:match>


<!--! Radio widget -->
<py:match path="radio">
    <input class="ui-el-radio" type="radio" value="${select('@value')}" name="${select('@name')}" id="${select('@id')}" checked="${str(select('@checked')) or None}" />
    <span class="ui-el-label-1">
            ${select('@text')}
    </span>
</py:match>


</widgets>
