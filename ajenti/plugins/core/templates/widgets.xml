<widgets xmlns="http://www.w3.org/1999/xhtml"
         xmlns:xi="http://www.w3.org/2001/XInclude"
         xmlns:py="http://genshi.edgewall.org/"
         py:strip="" >


<!--! Top logo widget -->
<py:match path="topbar">
    <table width="100%" cellspacing="0" cellpadding="0">
        <tr>
            <td>
                <span class="ui-logo"><img src="/dl/core/ui/logo.png" /></span>
            </td>
            <td width="20" style="vertical-align:middle">
                <img src="/dl/core/ui/ajax.gif" id="ajax-loader" style="display:none"/>
            </td>
        </tr>
    </table>
</py:match>


<!--! Widget for Category -->
<py:match path="category">
    <a href="#" onclick="javascript:ajax('/handle/category/click/${select('@id')}');">
	    <div class="${'ui-el-category-selected' if str(select('@selected'))=='true' else 'ui-el-category'}">
		    <table>
                <tr>
                    <td rowspan="2" class="ui-el-category-icon">
                        <img src="${select('@icon')}" />
                    </td>
                    <td class="ui-el-category-text">${select('@text')}</td>
                </tr>
                <tr>
                    <td class="ui-el-category-description">${select('@description')}</td>
                </tr>
            </table>
        </div>
    </a>
</py:match>


<!--! DialogBox widget -->
<!--! Attributes
@id
@title
@width
@height
-->
<py:match path="dialogbox">
    <div class="ui-el-modal-blackout" />
    <div class="ui-el-modal-wrapper" id="${select('@id')}-wr">
        <form action="${select('@action')}" name="${select('@id')}" id="${select('@id')}">
            <table cellspacing="0" cellpadding="0">
                <tr><td class="ui-el-modal-lt"></td><td class="ui-el-modal-t"></td><td class="ui-el-modal-rt"></td></tr>
                <tr><td class="ui-el-modal-l"></td>
                    <td class="ui-el-modal-c" width="${select('@width')}" height="${select('@height')}">
                        <vcontainer>
                            <vnode><label text="${select('@title')}" size="4" /></vnode>
                            <vnode><spacer height="10" /></vnode>
                            <vnode>${select('node()')}</vnode>
                        </vcontainer>
                        <div class="ui-el-modal-buttons">
                            <hcontainer>
                                <hnode><button text="OK" onclick="form" action="OK" form="${select('@id')}"/></hnode>
                                <hnode><button text="Cancel" onclick="form" action="Cancel" form="${select('@id')}"/></hnode>
                            </hcontainer>
                        </div>
                    </td><td class="ui-el-modal-r"></td>
                </tr>
                <tr><td class="ui-el-modal-lb"></td><td class="ui-el-modal-b"></td><td class="ui-el-modal-rb"></td></tr>
            </table>
        </form>
    </div>
    <script> ui_center('${select('@id')}-wr'); </script>
</py:match>

<!--! VContainer widget -->
<py:match path="vcontainer">
    <table cellspacing="0" cellpadding="0" style="width: ${str(select('@width')) or 'auto'}; height: ${str(select('@height')) or 'auto'};">
        ${select('node()')}
    </table>
</py:match>
<py:match path="vnode">
    <tr><td>${select('node()')}</td></tr>
</py:match>


<!--! HContainer widget -->
<py:match path="hcontainer">
    <table cellspacing="0" cellpadding="0" style="width: ${str(select('@width')) or 'auto'}; height: ${str(select('@height')) or 'auto'};">
        <tr>
            ${select('node()')}
        </tr>
    </table>
</py:match>
<py:match path="hnode">
    <td>${select('node()')}</td>
</py:match>


<!--! Spacer -->
<py:match path="spacer">
    <div style="width: ${str(select('@width')) or '1'}px; height: ${str(select('@height')) or '1'}px;" />
</py:match>


<!--! Label widget -->
<py:match path="label">
    <span class="ui-el-label-${str(select('@size')) or '1'}" style="${'font-weight: bold;' if str(select('@bold')) == 'True' else None}">
        ${select('@text')}
    </span>
</py:match>


<!--! Image -->
<py:match path="image">
    <img class="ui-el-image" src="${select('@file')}" />
</py:match>


<!--! Button widget -->
<py:match path="button">
    <py:choose test="">
        <a py:when="str(select('@onclick')) == 'form'" href="#"
                onclick="javascript:ajaxForm('${select('@form')}', '${select('@action')}');">
            <div class="ui-el-button"> ${select('@text')} </div>
        </a>
        <a py:otherwise="" href="#" onclick="javascript:ajax('/handle/button/click/${select('@id')}');">
            <div class="ui-el-button"> ${select('@text')} </div>
        </a>
    </py:choose>
</py:match>


<!--! LinkLabel widget -->
<py:match path="linklabel">
    <a href="#" onclick="javascript:ajax('/handle/linklabel/click/${select('@id')}');">
        <span class="ui-el-link">
            ${select('@text')}
        </span>
    </a>
</py:match>


<!--! Action widget -->
<py:match path="action">
    <a href="#" onclick="javascript:ajax('/handle/action/click/${select('@id')}');">
        <div class="ui-el-action">
            <table>
                <tr>
                    <td rowspan="2" class="ui-el-action-icon">
                        <img src="${select('@icon')}" />
                    </td>
                    <td class="ui-el-action-text">
                        ${select('@text')}
                    </td>
                </tr>
                <tr>
                    <td class="ui-el-action-description">
                        ${select('@description')}
                    </td>
                </tr>
            </table>
        </div>
    </a>
</py:match>


<!--! TextInput widget -->
<py:match path="textinput">
    <input class="ui-el-input" name="${select('@name')}" value="${str(select('@value')) or ''}" id="${select('@id')}" />
</py:match>


<!--! CheckBox widget -->
<py:match path="checkbox">
    <input class="ui-el-checkbox" type="checkbox" value="${select('@value')}" name="${select('@name')}" id="${select('@id')}" checked="${str(select('@checked')) or None}" />
    <span class="ui-el-label-1">
            ${select('@text')}
    </span>
</py:match>


<!--! Radio widget -->
<py:match path="radio">
    <input class="ui-el-radio" type="radio" value="${select('@value')}" name="${select('@name')}" id="${select('@id')}" checked="${str(select('@checked')) or None}" />
    <span class="ui-el-label-1">
            ${select('@text')}
    </span>
</py:match>


<!--! LayoutTable widget -->
<py:match path="layouttable">
    <table cellspacing="8" style="width: ${str(select('@width')) or 'auto'}; height: ${str(select('@height')) or 'auto'};">
        ${select('node()')}
    </table>
</py:match>

<py:match path="layouttablerow">
    <tr style="width: ${str(select('@width')) or 'auto'}; height: ${str(select('@height')) or 'auto'};">
        ${select('node()')}
    </tr>
</py:match>

<py:match path="layouttablecell">
    <td colspan="${select('@colspan')}" rowspan="${select('@rowspan')}" style="width: ${str(select('@width')) or 'auto'}; height: ${str(select('@height')) or 'auto'};">
        ${select('node()')}
    </td>
</py:match>


<!--! DataTable widget -->
<py:match path="datatable">
    <table cellpadding="0" cellspacing="0" class="ui-el-table" style="width: ${str(select('@width')) or 'auto'}; height: ${str(select('@height')) or 'auto'};">
        ${select('node()')}
    </table>
</py:match>

<py:match path="datatablerow">
    <tr class="ui-el-table-row${'-header' if str(select('@header')) else ''}" style="width: ${str(select('@width')) or 'auto'}; height: ${str(select('@height')) or 'auto'};">
        ${select('node()')}
    </tr>
</py:match>

<py:match path="datatablecell">
    <td class="ui-el-table-cell" colspan="${select('@colspan')}" rowspan="${select('@rowspan')}" style="width: ${str(select('@width')) or 'auto'}; height: ${str(select('@height')) or 'auto'};">
        ${select('node()')}
    </td>
</py:match>


<!--! TreeContainer widget -->
<py:match path="treecontainer">
    <div class="ui-el-treecontainernode">
        <div class="ui-el-treecontainernode-button">
            <a href="#">
                <img id="${select('@id')}-btn" src="/dl/core/ui/tree-${'minus' if str(select('@expanded'))=='True' else 'plus'}.png"
                    onclick="javascript:ui_showhide('${select('@id')}');ajaxNoUpdate('/handle/treecontainer/click/${select('@id')}');ui_treeicon('${select('@id')}-btn')"/>
            </a>
        </div>
        ${select('@text')}
        <div class="ui-el-treecontainernode-inner" id="${select('@id')}" style="${'display:none;' if str(select('@expanded'))!='True' else None}">
            ${select('node()')}
        </div>
    </div>
</py:match>

<py:match path="treecontainernode">
        <div class="ui-el-treecontainernode-inner">
            ${select('node()')}
        </div>
</py:match>


<!--! ScrollContainer -->
<py:match path="scrollcontainer">
    <div class="ui-el-scrollcontainer" style="width: ${str(select('@width')) or '200'}px; height: ${str(select('@height')) or '200'}px;" />
</py:match>


<!--! TextInputArea -->
<py:match path="textinputarea">
    <textarea class="ui-el-textarea" name="${select('@name')}" disabled="${str(select('@disabled')) or None}" style="width: ${str(select('@width')) or '200'}px; height: ${str(select('@height')) or '200'}px;">
        ${select('@text')}
    </textarea>
</py:match>


</widgets>
