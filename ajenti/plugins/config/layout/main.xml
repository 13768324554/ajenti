<xml>
    <toolbar>
        <hcontainer>
            <toolbutton text="Add new user" id="adduser" icon="/dl/core/ui/stock/add.png" />
            <toolbutton text="Restart Ajenti" id="restart" icon="/dl/core/ui/stock/refresh.png" />
        </hcontainer>
    </toolbar>
    <label size="5" text="General" />

    <pad id="main">
                <formbox id="frmGeneral" hidecancel="True">
                    <layouttable>
                        <layouttablerow>
                            <layouttablecell>
                                <label text="Bind to host:"/>
                            </layouttablecell>
                            <layouttablecell>
                                <textinput name="bind_host" id="bind_host"/>
                            </layouttablecell>
                        </layouttablerow>
                        <layouttablerow>
                            <layouttablecell>
                                <label text="Bind to port:"/>
                            </layouttablecell>
                            <layouttablecell>
                                <textinput name="bind_port" id="bind_port"/>
                            </layouttablecell>
                        </layouttablerow>
                        <layouttablerow>
                            <layouttablecell>
                                <label text="Enable authorization"/>
                            </layouttablecell>
                            <layouttablecell>
                                <checkbox id="httpauth" name="httpauth" />
                            </layouttablecell>
                        </layouttablerow>
                        <layouttablerow>
                            <layouttablecell>
                                <label text="Enable SSL"/>
                            </layouttablecell>
                            <layouttablecell>
                                <checkbox name="ssl" id="ssl"/>
                            </layouttablecell>
                        </layouttablerow>
                        <layouttablerow>
                            <layouttablecell>
                                <label text="SSL certificate:"/>
                            </layouttablecell>
                            <layouttablecell>
                                <textinput name="cert_file" id="cert_file"/>
                            </layouttablecell>
                        </layouttablerow>
                        <layouttablerow>
                            <layouttablecell>
                                <label text="SSL certificate key:"/>
                            </layouttablecell>
                            <layouttablecell>
                                <textinput name="cert_key" id="cert_key"/>
                            </layouttablecell>
                        </layouttablerow>
                    </layouttable>
                </formbox>

    </pad>

    <label size="5" text="Users" />

    <pad>
                    <datatable width="300" id="accounts">
                        <datatablerow header="True">
                            <datatablecell>
                                <label text="Account"/>
                            </datatablecell>
                            <datatablecell width="60">
                            </datatablecell>
                        </datatablerow>
                    </datatable>

                <dialogbox id="dlgAddUser" title="New account">
                    <layouttable>
                        <layouttablerow>
                            <layouttablecell>
                                <label text="Username"/>
                            </layouttablecell>
                            <layouttablecell>
                                <textinput name="login" />
                            </layouttablecell>
                        </layouttablerow>
                        <layouttablerow>
                            <layouttablecell>
                                <label text="Password"/>
                            </layouttablecell>
                            <layouttablecell>
                                <textinput name="password" password="True" />
                            </layouttablecell>
                        </layouttablerow>
                    </layouttable>
                </dialogbox>

    </pad>

    <label size="5" text="Plugin configuration" />

    <pad>
                    <datatable width="300" id="configs">
                        <datatablerow header="True">
                            <datatablecell width="20" />
                            <datatablecell>
                                <label text="Name"/>
                            </datatablecell>
                            <datatablecell width="60">
                            </datatablecell>
                        </datatablerow>
                    </datatable>

    </pad>
</xml>
