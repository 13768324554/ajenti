<xml>
    <label size="3" text="Welcome to Ajenti" />
    <br />
    <label size="1" text="An internet connection is advisable to complete installation" />
    <pad>
    <formbox hidecancel="True" id="frmChangePassword">
        <label size="2" text="Please change your login and password" />
        <layouttable>
            <layouttablerow>
                <layouttablecell>
                    <label text="Login:" />
                </layouttablecell>
                <layouttablecell>
                    <textinput name="login" value="admin" />
                </layouttablecell>
            </layouttablerow>
            <layouttablerow>
                <layouttablecell>
                    <label text="Password:" />
                </layouttablecell>
                <layouttablecell>
                    <textinput name="password" />
                </layouttablecell>
            </layouttablerow>
        </layouttable>
    </formbox>
    </pad>
</xml>
