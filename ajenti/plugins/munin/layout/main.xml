<body xmlns:bind="bind" xmlns:munin="munin">
    <pad>
        <bind:collection bind="domains">
            <vc>
                <vc bind="__items" />
                <bind:template>
                    <vc>
                        <label bind="name" style="bold" />

                        <bind:collection bind="hosts">
                            <dt bind="__items" />

                            <bind:template>
                                <collapserow>
                                    <label bind="name" />

                                    <bind:collection bind="graphs">
                                        <dt bind="__items" />
                                        
                                        <bind:template>
                                            <collapserow>
                                                <label bind="full_name" />
                                                <munin:plot bind="url" 
                                                    period="day" />
                                                <munin:plot bind="url" 
                                                    period="week" />
                                                <munin:plot bind="url" 
                                                    period="month" />
                                                <munin:plot bind="url" 
                                                    period="year" />
                                            </collapserow>
                                        </bind:template>
                                    </bind:collection>
                                </collapserow>
                            </bind:template>
                        </bind:collection>
                    </vc>
                </bind:template>
            </vc>
        </bind:collection>
    </pad> 
</body>
