<pad xmlns:bind="bind">
    <vc id="nginx-config">
        <box id="http">

			<formline text="Servers">
	            <bind:collection id="servers">
	            	<vc id="__items" />
	            	<bind:template>
	            		<collapse>
		            		<hc>
								<icon icon="th-large" />
								<label id="simple_name" />
								<button id="__delete" icon="remove" text="Delete" style="link" />
							</hc>	
		            		
		            		<vc>
								<bind:collection id="locations">
									<formline text="Locations">
										<vc id="__items" />
									</formline>
					            	<bind:template>
					            		<vc>
						            		<hc>
												<icon icon="map-marker" />
												<label id="pattern" />
												<button id="__delete" icon="remove" text="Delete" style="link" />
											</hc>	
										</vc>
									</bind:template>
								</bind:collection>
							</vc>
						</collapse>
	            	</bind:template>
	            </bind:collection>
			</formline>

			<formline>
				<button id="save" text="Save" style="blue" />
			</formline>
        </box>
    </vc>
</pad> 