<vc xmlns:bind="bind">
    <pad id="plugins">
        <bind:collection bind="plugins">
            <dt bind="__items">
                <dtr>
                    <dth width="16" />
                    <dth><label text="Name" /></dth>
                    <dth><label text="Author" /></dth>
                </dtr>
            </dt>

            <bind:template>
                <dtr>
                    <dtd>
                        <icon bind="icon" />
                    </dtd>
                    <dtd>
                        <hc>
                            <label bind="title" style="bold" />
                            <label bind="name" />
                        </hc>
                    </dtd>
                    <dtd>
                        <label bind="author" />
                    </dtd>
                </dtr>
            </bind:template>
        </bind:collection>
    </pad>
</vc>