<pad xmlns:bind="bind">
    <vc id="ajenti-config">
        <formgroup text="HTTP Server" id="http_binding">
            <vc>
                <formline text="Host">
                    <textbox id="host" />
                </formline>
                <formline text="Port">
                    <textbox id="port" type="integer" />
                </formline>
            </vc>
        </formgroup>
        <formgroup text="SSL" id="ssl">
            <vc>
                <formline text="Use SSL">
                    <checkbox id="enable" />
                </formline>
                <formline text="Path to certificate">
                    <textbox id="certificate_path" />
                </formline>
                <formline text="Path to key">
                    <textbox id="key_path" />
                </formline>
            </vc>
        </formgroup>
        <formgroup text="Users">
            <vc>
                <formline text="Authentication">
                    <checkbox text="Enable" id="authentication" />
                </formline>
                <formline text="Accounts">
                    <vc>
                        <bind:collection 
                                id="users" 
                                values="lambda c: c.values()"
                                add_item="lambda i,c: c.update({i.name: i})"
                                delete_item="lambda i,c: c.pop(i.name)"
                            >
                            <vc id="__items" />
                            <bind:template>
                                <hc>
                                    <icon icon="user" />
                                    <box width="100">
                                        <editable id="name" />
                                    </box>
                                    <editable id="password" placeholder="Change password" icon="lock" />
                                    <button id="__delete" icon="remove" text="Delete" style="link" />
                                </hc>
                            </bind:template>
                        </bind:collection>
                        <button id="__add" icon="plus" text="Create" />
                    </vc>
                </formline>
                <formline>
                    <button text="Save" style="green" id="save-button" icon="ok" />
                </formline>
            </vc>
        </formgroup>
    </vc>
</pad>