<vc>
    <servicebar id="servicebar" />
    
    <body>
        <pad>
            <formgroup text="MIBs">
                <bind:collection bind="mibs">
                    <dt bind="__items" />
                    <bind:template>
                        <dtr>
                            <dtd>
                                <checkbox bind:value="selected" bind:text="name" />
                            </dtd>
                        </dtr>
                    </bind:template>
                </bind:collection>
            </formgroup>
        </pad>
    </body>

    <button id="save" text="{Save}" icon="ok" />
</vc>