<vc xmlns:bind="bind">
    <toolbar>
        <hc>
            <button id="get-lists" icon="refresh" text="Get lists" />
        </hc>
    </toolbar>

    <pad id="bind-root">
        <tabs id="tabs">
            <tab title="Upgradeable">
                <bind:collection bind="upgradeable" id="upgradeable">
                    <dt bind="__items">
                        <include layout="packages:headers" />
                    </dt>
                    <bind:template>
                        <include layout="packages:row" />
                    </bind:template>
                </bind:collection>
            </tab>

            <tab title="Search">
                <pad>
                    <right>
                        <hc>
                            <textbox id="search-box" />
                            <button id="search-button" icon="search" text="Search" />
                        </hc>
                    </right>
                    <label id="search-counter" />
                </pad>

                <bind:collection id="search">
                    <dt bind="__items">
                        <include layout="packages:headers" />
                    </dt>
                    <bind:template>
                        <include layout="packages:row" />
                    </bind:template>
                </bind:collection>
            </tab>

            <tab title="Pending" id="bind-pending">
                <bind:collection id="pending" bind="_pending">
                    <dt bind="__items">
                        <include layout="packages:headers" />
                    </dt>
                    <bind:template>
                        <include layout="packages:row" />
                    </bind:template>
                </bind:collection>
            </tab>
        </tabs>
    </pad>
</vc>