<vc>
    <servicebar bind="service_name"/>

    <body>
        <tabs>
            <tab title="{Hosts}">
                <pad>
                    <bind:collection bind="hosts" id="hosts">
                        <dt bind="__items" addrow="{Add}"/>
                        <bind:template>
                            <collapserow>
                                <box>
                                    <right>
                                        <hc>
                                            <button bind="__delete" icon="remove" style="icon"
                                                    warning="{Confirm deletion}"/>
                                        </hc>
                                    </right>
                                    <hc>
                                        <icon icon="globe"/>
                                        <checkbox bind="active" id="header-active-checkbox"/>
                                        <box width="200">
                                            <label bind="name" style="bold"/>
                                        </box>
                                    </hc>
                                </box>
                                <indent>
                                    <vc>
                                        <formline text="{Name}">
                                            <textbox bind="name"/>
                                        </formline>
                                        <formline text="{Enable}" id="body-active-line">
                                            <checkbox bind="active"/>
                                        </formline>
                                        <formline text="{Configuration}">
                                            <codearea bind="config" width="500" height="400"/>
                                        </formline>
                                    </vc>
                                </indent>
                            </collapserow>
                        </bind:template>
                    </bind:collection>
                </pad>
            </tab>
            <tab title="{Main configurations}" visible="false" id="main-conf-tab">
                <pad>
                    <bind:collection bind="configurations" id="configurations">
                        <dt bind="__items"/>
                        <bind:template>
                            <collapserow>
                                <box>
                                    <right>
                                        <label bind="configfile"/>
                                    </right>
                                    <hc>
                                        <icon icon="list-alt"/>
                                        <label bind="name" style="bold"/>
                                    </hc>
                                </box>
                                <pad>
                                    <pad>
                                        <codearea height="680" width="720" bind="config"/>
                                    </pad>
                                </pad>
                            </collapserow>
                        </bind:template>
                    </bind:collection>
                </pad>
            </tab>
            <tab title="{Mods}" visible="false" id="mods-tab">
                <pad>
                    <hc>
                        <box height="700" scroll="True">
                            <bind:collection bind="mods" id="mods">
                                <dt bind="__items" width="auto">
                                    <dtr header="True">
                                        <dth text="{Active}"/>
                                        <dth text="{Name}"/>
                                        <dth text="{Control}"/>
                                    </dtr>
                                </dt>
                                <bind:template>
                                    <dtr>
                                        <dtd>
                                            <checkbox bind="active"/>
                                        </dtd>
                                        <dtd>
                                            <label bind="name"/>
                                        </dtd>
                                        <dtd>
                                            <button id="edit" bind="edit" icon="edit" style="icon"/>
                                        </dtd>
                                    </dtr>
                                    <!--<collapserow>-->
