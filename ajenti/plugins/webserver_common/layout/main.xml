                                                <!--<icon icon="bolt"/>-->
                                                <!--<checkbox bind="active" id="mod-active-checkbox"/>-->
                                                <!--<box width="200">-->
                                                    <!--<label bind="name" style="bold"/>-->
                                                <!--</box>-->
                                            <!--</hc>-->
                                        <!--</box>-->
                                        <!--<indent>-->
                                            <!--<vc>-->
                                                <!--<formline text="{Name}">-->
                                                    <!--<textbox bind="name"/>-->
                                                <!--</formline>-->
                                                <!--<formline text="{Enable}" id="mod-active-line">-->
                                                    <!--<checkbox bind="active"/>-->
                                                <!--</formline>-->
                                                <!--<formline text="{Configuration}">-->
                                                    <!--<codearea bind="config" width="500" height="400"/>-->
                                                <!--</formline>-->
                                            <!--</vc>-->
                                        <!--</indent>-->
                                    <!--</collapserow>-->
                                </bind:template>
                            </bind:collection>
                        </box>
                        <box>
                            <codearea visible="False" bind="config" id="mod-config" width="auto"/>
                        </box>
                    </hc>
                </pad>
            </tab>
        </tabs>
        <pad>
            <button text="{Save}" id="save-button" icon="ok"/>
        </pad>
    </body>
</vc>