<vc>
    <servicebar bind="service_name"/>

    <body>
        <tabs>
            <tab title="{Hosts}">
                <pad>
                    <bind:collection bind="hosts" id="hosts">
                        <dt bind="__items" addrow="{Add}"/>
                        <bind:template>
                            <collapserow>
                                <box>
                                    <right>
                                        <hc>
                                            <button bind="__delete" icon="remove" style="icon"
                                                    warning="{Confirm deletion}"/>
                                        </hc>
                                    </right>
                                    <hc>
                                        <icon icon="globe"/>
                                        <checkbox bind="active" id="header-active-checkbox"/>
                                        <box width="200">
                                            <label bind="name" style="bold"/>
                                        </box>
                                    </hc>
                                </box>
                                <indent>
                                    <vc>
                                        <formline text="{Name}">
                                            <textbox bind="name"/>
                                        </formline>
                                        <formline text="{Enable}" id="body-active-line">
                                            <checkbox bind="active"/>
                                        </formline>
                                        <formline text="{Configuration}">
                                            <codearea bind="config" width="500" height="400"/>
                                        </formline>
                                    </vc>
                                </indent>
                            </collapserow>
                        </bind:template>
                    </bind:collection>
                </pad>
            </tab>
            <tab title="{Main configurations}" visible="false" id="main-conf-tab">
                <pad>
                    <bind:collection bind="configurations" id="configurations">
                        <dt bind="__items"/>
                        <bind:template>
                            <collapserow>
                                <box>
                                    <right>
                                        <label bind="configfile"/>
                                    </right>
                                    <hc>
                                        <icon icon="list-alt"/>
                                        <label bind="name" style="bold"/>
                                    </hc>
                                </box>
                                <pad>
                                    <pad>
                                        <codearea height="680" width="720" bind="config"/>
                                    </pad>
                                </pad>
                            </collapserow>
                        </bind:template>
                    </bind:collection>
                </pad>
            </tab>
            <tab title="{Mods}" visible="false" id="mods-tab">
                <pad>
                    <bind:collection bind="mods" id="mods">
                        <dt bind="__items"/>
                        <bind:template>
                            <collapserow>
                                <box>
                                    <hc>
                                        <icon icon="cog"/>
                                        <checkbox bind="active" id="header-active-mod"/>
                                        <box width="200">
                                            <label bind="name" style="bold"/>
                                        </box>
                                    </hc>
                                </box>
                                <indent>
                                    <vc>
                                        <formline text="{Name}">
                                            <label bind="name"/>
                                        </formline>
                                        <formline text="{Enable}" id="body-active-mod">
                                            <checkbox bind="active"/>
                                        </formline>
                                        <formline text="{Configuration}">
                                            <codearea bind="config" width="720"/>
                                        </formline>
                                    </vc>
                                </indent>
                            </collapserow>
                        </bind:template>
                    </bind:collection>
                </pad>
            </tab>
            <tab title="{Extra configurations}" visible="false" id="confs-tab">
                <pad>
                    <bind:collection bind="confs" id="confs">
                        <dt bind="__items"/>
                        <bind:template>
                            <collapserow>
                                <box>
                                    <hc>
                                        <icon icon="list-alt"/>
                                        <checkbox bind="active" id="header-active-conf"/>
                                        <box width="200">
                                            <label bind="name" style="bold"/>
                                        </box>
                                    </hc>
                                </box>
                                <indent>
                                    <vc>
                                        <formline text="{Name}">
                                            <label bind="name"/>
                                        </formline>
                                        <formline text="{Enable}" id="body-active-conf">
                                            <checkbox bind="active"/>
                                        </formline>
                                        <formline text="{Configuration}">
                                            <codearea bind="config" width="720"/>
                                        </formline>
                                    </vc>
                                </indent>
                            </collapserow>
                        </bind:template>
                    </bind:collection>
                </pad>
            </tab>
        </tabs>
        <pad>
            <box>
                <button text="{Save}" id="save-button" icon="ok"/>
            </box>
        </pad>
    </body>
</vc>