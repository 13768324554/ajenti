<xml>
    <toolbar>
        <button id="btnAddHost" text="Add DHCP host" icon="/dl/core/ui/stock/add.png" />
        <button id="btnAddDomain" text="Add domain" icon="/dl/core/ui/stock/add.png" />
    </toolbar>
    
    <label size="5" text="DNS entries" />

    <pad>
        <dt id="domains" width="100%">
            <dtr header="True">
                <dth>
                    <label text="Hostname" />
                </dth>
                <dth>
                    <label text="Address" />
                </dth>
                <dth width="1" />
            </dtr>
        </dt>
    </pad>

    <label size="5" text="DHCP hosts" />

    <pad>
        <dt id="hosts" width="100%">
            <dtr header="True">
                <dth>
                    <label text="MAC" />
                </dth>
                <dth>
                    <label text="Identification" />
                </dth>
                <dth>
                    <label text="IP" />
                </dth>
                <dth>
                    <label text="Action" />
                </dth>
                <dth width="1" />
            </dtr>
        </dt>
    </pad>
    
    <label size="5" text="Active leases" />

    <pad id="main">
        <dt id="list" width="100%">
            <dtr header="True">
                <dth>
                    <label text="MAC" />
                </dth>
                <dth>
                    <label text="IP" />
                </dth>
                <dth>
                    <label text="Host" />
                </dth>
            </dtr>
        </dt>
    </pad>
</xml>
