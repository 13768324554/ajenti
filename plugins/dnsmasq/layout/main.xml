<xml>

    <label size="5" text="Active leases" />

    <pad>
        <datatable id="list" width="100%">
            <datatablerow header="True">
                <datatablecell width="30%">
                    <label text="MAC" />
                </datatablecell>
                <datatablecell width="30%">
                    <label text="IP" />
                </datatablecell>
                <datatablecell>
                    <label text="Host" />
                </datatablecell>
            </datatablerow>
        </datatable>
    </pad>


    <label size="5" text="DHCP options" />

    <pad>
        <datatable id="hosts" width="100%">
            <datatablerow header="True">
                <datatablecell>
                    <label text="MAC" />
                </datatablecell>
                <datatablecell>
                    <label text="Identification" />
                </datatablecell>
                <datatablecell>
                    <label text="IP" />
                </datatablecell>
                <datatablecell>
                    <label text="Action" />
                </datatablecell>
                <datatablecell />
            </datatablerow>
        </datatable>
    </pad>
</xml>
