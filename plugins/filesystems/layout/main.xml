<xml>
    <toolbar>
        <toolbutton id="add" text="Add new mountpoint" icon="/dl/core/ui/stock/add.png" />
    </toolbar>

    <pad>
        <datatable id="list" width="100%">
            <datatablerow header="True">
                <datatablecell>
                    <label text="Source" />
                </datatablecell>
                <datatablecell>
                    <label text="Mountpoint" />
                </datatablecell>
                <datatablecell width="60">
                    <label text="FS type" />
                </datatablecell>
                <datatablecell>
                    <label text="Options" />
                </datatablecell>
                <datatablecell />
                <datatablecell />
                <datatablecell />
            </datatablerow>
        </datatable>
    </pad>

    <dialogbox id="dlgEdit">
        <formline text="Source" id="sources" iid="source" />
        <formline iid="src">
            <textinput id="src" name="src" />
        </formline>
        <formline text="Mount point" iid="mp">
            <textinput id="mp" name="mp" />
        </formline>
        <formline text="Filesystem" iid="mp">
            <textinput id="fs" name="fs" />
        </formline>
        <formline text="Options" iid="opts">
            <textinput id="opts" name="opts" />
        </formline>
        <formline text="Read-only" iid="ro">
            <checkbox id="ro" name="ro" />
        </formline>
        <formline text="Bind" iid="bind">
            <checkbox id="bind" name="bind" />
        </formline>
        <formline text="Loop" iid="loop">
            <checkbox id="loop" name="loop" />
        </formline>
        <formline text="Dump order" iid="dump_p">
            <textinput id="dump_p" name="dump_p" />
        </formline>
        <formline text="fsck order" iid="fsck_p">
            <textinput id="fsck_p" name="fsck_p" />
        </formline>

    </dialogbox>
