<xml>
    <toolbar>
        <button id="newshare" text="Add share" icon="/dl/samba/newshare.png" />
        <button id="newuser" text="Add user" icon="/dl/core/ui/stock/add.png" />
    </toolbar>
    
    <pad id="main">
        <tabcontrol id="tabs" active="0">
            <tabheader text="Share" id="0"/>
            <tabheader text="Users" id="1"/>
            <tabheader text="General" id="2"/>

            <tabbody id="0">
                <dt id="shares" width="100%">
                    <dtr header="True">
                        <dth width="1" />
                        <dth>
                            <label text="Name" />
                        </dth>
                        <dth>
                            <label text="Path" />
                        </dth>
                        <dth width="1" />
                    </dtr>
                </dt>
            </tabbody>
            
            <tabbody id="1">
                <dt id="users" width="100%">
                    <dtr header="True">
                        <dth width="1" />
                        <dth>
                            <label text="Name" />
                        </dth>
                        <dth width="1" />
                    </dtr>
                </dt>
            </tabbody>
            
            <tabbody id="2">
               <container id="tab2" />
            </tabbody>
            
        </tabcontrol>
    </pad>
</xml>
