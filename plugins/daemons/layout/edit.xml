<xml>
    <dialogbox id="dlgEdit">

    <tabcontrol id="tabs">
        <tabheader pid="tabs" text="General" id="0" active="True" />
        <tabheader pid="tabs" text="Output" id="1"/>
        <tabheader pid="tabs" text="Respawn" id="2"/>

        <tabbody pid="tabs" id="0" active="True">
            <formline text="Name">
                <textinput name="name" id="name" />
            </formline>
            <formline text="Command" help="Absolute paths only">
                <textinput name="command" id="command" />
            </formline>
            <formline text="User">
                <textinput name="user" id="user" />
            </formline>
            <formline text="Umask">
                <textinput name="umask" id="umask" />
            </formline>
            <formline text="Chroot">
                <textinput name="chroot" id="chroot" />
            </formline>
            <formline text="Working directory">
                <textinput name="chdir" id="chdir" />
            </formline>
        </tabbody>

        <tabbody pid="tabs" id="1">
            <formline text="Combined output log">
                <textinput name="output" id="output" />
            </formline>
            <formline text="Stdout log">
                <textinput name="stdout" id="stdout" />
            </formline>
            <formline text="Stderr log">
                <textinput name="stderr" id="stderr" />
            </formline>
        </tabbody>

        <tabbody pid="tabs" id="2">
            <formline text="Respawn">
                <checkbox text="Enable" name="respawn" id="respawn" />
            </formline>
            <formline text="Attempt count">
                <textinput name="attempts" id="attempts" />
            </formline>
            <formline text="Deplay">
                <textinput name="delay" id="delay" />
            </formline>
            <formline text="Limit">
                <textinput name="limit" id="limit" />
            </formline>
        </tabbody>

    </tabcontrol>
    </dialogbox>
</xml>
