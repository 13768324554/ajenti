<xml>
    <toolbar>
        <hcontainer>
            <div style="padding: 4px 5px 0">
                <label text="Command: " />
                <simpleform id="frmRun">
                    <textinput name="cmd" size="30" id="shell-command" />
                </simpleform>
            </div>
            <toolseparator />
            <toolbutton form="frmRun" onclick="form" text="Run" icon="/dl/core/ui/stock/service-run.png" />
            <div style="padding: 4px 5px 0">
                <label text="Recent: " />
              <select id="shell-recent" onchange="shellRecentClick()" onmousedown="shellRecentClick()" />
            </div>
        </hcontainer>
    </toolbar>

    <pad>
        <label text="Output" />
        <scrollcontainer id="log" width="650" height="500" />
    </pad>
</xml>
