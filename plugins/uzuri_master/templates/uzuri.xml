<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:py="http://genshi.edgewall.org/"
      xmlns:xi="http://www.w3.org/2001/XInclude" >
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>Uzuri</title>
    <link py:for="s in styles" href="${s}" rel="stylesheet" media="all" />
    <link href="/dl/uzuri_master/uzuri.css" rel="stylesheet" media="all" />
    <link rel="shortcut icon" href="/dl/core/ui/favicon.png" />
    <script src="/dl/uzuri_master/core.js" />
    <script src="/dl/uzuri_master/ui.js" />
    <script py:for="s in scripts" src="${s}" />
</head>

<body>
    <div class="uzuri-activity-shield" id="activity-shield"/>
    <div class="uzuri-activity-message" id="activity-message">
	<img src="/dl/core/ui/ajax.gif"/>
	<br/>
	<span class="ui-el-label-3">In progress</span>
	<br/>
	<span class="ui-el-label-1" id="activity-left">Some</span>
	<span class="ui-el-label-1"> more to go</span>
    </div>

    <table cellpadding="0" cellspacing="0" class="uzuri-main">
        <tr>
            <td class="uzuri-top-cell" colspan="2">
		<div class="uzuri-top">
		    <span class="uzuri-top-title">
			Uzuri
		    </span>
		</div>
	    </td>
        </tr>
        <tr>
            <td class="uzuri-sidepane" id="uzuri-sidepane">
                <div class="uzuri-sidepane-label">Plugins</div>
                <plugins py:strip=""/>
                <div class="uzuri-sidepane-label">Hosts</div>
                <hosts py:strip=""/>
		<br/>
                <div class="uzuri-sidepane-label2" id="uzuri-viewing"/>
                <div class="uzuri-sidepane-label2" id="uzuri-controlling"/>
		<br/>
		<form action="/uzuri/addhost" method="GET">
		    <input name="addr" class="uzuri-add-host"/>
		    <input type="submit" class="uzuri-add-host-btn" value="Add host"/>
		</form>
            </td>
            <td class="uzuri-mainpane">
		<div class="uzuri-toolbar">
		    <div class="uzuri-toolbutton" onclick="execute_refresh()">
			<img src="/dl/uzuri_master/refresh.png"/>
			Refresh
		    </div>
		    <div class="uzuri-toolbutton" onclick="execute_reset()">
			<img src="/dl/uzuri_master/reset.png"/>
			Reset
		    </div>
		    <div class="uzuri-toolbutton" onclick="javascript:if (confirm('Are you sure?')) document.location.href='/uzuri/delhost?addr='+visible_host;">
			<img src="/dl/uzuri_master/delete.png"/>
			Delete host
		    </div>
		</div>
		<div class="full-dock" id="uzuri-mainpane">
		    <mainpane py:strip=""/>
		</div>
	    </td>
        </tr>
    </table>

    <script>
	load_hosts();
	switch_host_num(-1);
	ui_center("activity-message");
	sw = document.width;
	document.getElementById("activity-shield").style.width = (sw-200) + 'px';
	ui_hide("activity-shield");
	ui_hide("activity-message");
    </script>
</body>
</html>
