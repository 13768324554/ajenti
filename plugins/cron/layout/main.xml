<xml>
    <toolbar>
        <hcontainer>
            <button id="add_task" text="Add task" icon="/dl/cron/add-task.png" />
            <button id="add_oth" text="Add non-task string" icon="/dl/core/ui/stock/add.png" />
            <div style="padding: 0 5px">
            <formbox id="frmUser" hideok="True" hidecancel="True">
                <hcontainer spacing="5">
                    <select id="users_select" name="users_select" />
                    <button id="change_user" text="Change user" action="OK" form="frmUser" onclick="form"/>
                </hcontainer>
            </formbox>
            </div>
        </hcontainer>
    </toolbar>

    <label id="title" text="Scheduled tasks" size="5" />

    <pad>
        <tabcontrol id="tabs">
                <tabheader pid="tabs" text="Tasks" id="0" active="True" />
                <tabheader pid="tabs" text="Non-task strings" id="1"/>
                <tabbody pid="tabs" id="0" active="True">
                    <dt id="table_task" width="100%">
                        <dtr header="True">
                            <dth>
                                <label text="Minutes" />
                            </dth>
                            <dth>
                                <label text="Hours" />
                            </dth>
                            <dth>
                                <label text="Days" />
                            </dth>
                            <dth>
                                <label text="Months" />
                            </dth>
                            <dth>
                                <label text="DoW" />
                            </dth>
                            <dth>
                                <label text="Command" />
                            </dth>
                            <dth />
                        </dtr>
                    </dt>
                </tabbody>

                <tabbody pid="tabs" id="1">
                    <dt id="table_other" width="100%"> 
                        <dtr header="True">
                            <dth>
                                <label text="String" />
                            </dth>
                            <dth />
                        </dtr>
                    </dt>
                </tabbody>
        </tabcontrol>

        <dialogbox id="dlgEditTask" hideok="True" hidecancel="True" title='Edit task'>
            <tabcontrol id="tabsEdit" active="0">
                    <tabheader pid="tabsEdit" text="Regular" id="11" active="True" />
                    <tabheader pid="tabsEdit" text="Advanced" id="12"/>
                    <tabheader pid="tabsEdit" text="Special" id="13"/>
                    <tabbody pid="tabsEdit" id="11" active="True">
                        <tabcontrol id="tabsRegular">
                                <tabheader pid="tabsRegular" text="Minutely" id="15" active="True" />
                                <tabheader pid="tabsRegular" text="Hourly" id="16"/>
                                <tabheader pid="tabsRegular" text="Daily" id="17"/>
                                <tabheader pid="tabsRegular" text="Weekly" id="18"/>
                                <tabheader pid="tabsRegular" text="Monthly" id="19"/>
                                <tabbody pid="tabsRegular" id="15" active="True">
                                    <formbox id="frmTempMinutes">
                                        <vcontainer spacing="5">
                                            <hcontainer>
                                                <label text='Start task every' />
                                                <textinput name='minutes' size='3' />
                                                <label text="minutes" />
                                            </hcontainer>
                                            <hcontainer>
                                                <label text='Command' />
                                                <textinput name='command' size='30' />
                                            </hcontainer>
                                        </vcontainer>
                                    </formbox>
                                </tabbody>

                                <tabbody pid="tabsRegular" id="16">
                                    <formbox id="frmTempHours">
                                        <vcontainer spacing="5">
                                            <hcontainer>
                                                <label text='Start task every' />
                                                <textinput name='hours' size='3' />
                                                <label text='hours at' />
                                                <select id="minute_select_h" name="minute_select_h" />
                                                <label text="minutes" />
                                            </hcontainer>
                                            <hcontainer>
                                                <label text='Command' />
                                                <textinput name='command' size='30' />
                                            </hcontainer>
                                        </vcontainer>
                                    </formbox>
                                </tabbody>

                                <tabbody pid="tabsRegular" id="17">
                                    <formbox id="frmTempDays">
                                        <vcontainer spacing="5">
                                            <hcontainer>
                                                <label text='Start task every' />
                                                <textinput name='days' size='3' />
                                                <label text='days at' />
                                                <select id="hour_select_d" name="hour_select_d" />
                                                <label text=":" />
                                                <select id="minute_select_d" name="minute_select_d" />
                                            </hcontainer>
                                            <hcontainer>
                                                <label text='Command' />
                                                <textinput name='command' size='30' />
                                            </hcontainer>
                                        </vcontainer>
                                    </formbox>
                                </tabbody>

                                <tabbody pid="tabsRegular" id="18">
                                    <formbox id="frmTempWeek">
                                        <vcontainer spacing="5">
                                            <hcontainer>
                                                <label text='Start task every' />
                                                <select id="weekday_select" name="weekday_select" />
                                                <label text='at' />
                                                <select id="hour_select_w" name="hour_select_w" />
                                                <label text=':' />
                                                <select id="minute_select_w" name="minute_select_w" />
                                            </hcontainer>
                                            <hcontainer>
                                                <label text='Command' />
                                                <textinput name='command' size='30' />
                                            </hcontainer>
                                        </vcontainer>
                                    </formbox>
                                </tabbody>
                                <tabbody pid="tabsRegular" id="19">
                                    <formbox id="frmTempMonths">
                                        <vcontainer spacing="5">
                                            <hcontainer>
                                                <label text='Start task every' />
                                                <textinput name='months' size='3' />
                                                <label text='months' />
                                            </hcontainer>
                                            <hcontainer>
                                                <label text='On' />
                                                <select id="day_select" name="day_select" />
                                                <label text='th at' />
                                                <select id="hour_select_m" name="hour_select_m" />
                                                <label text=':' />
                                                <select id="minute_select_m" name="minute_select_m" />
                                            </hcontainer>
                                            <hcontainer>
                                                <label text='Command' />
                                                <textinput name='command' size='30' />
                                            </hcontainer>
                                        </vcontainer>
                                    </formbox>
                                </tabbody>
                        </tabcontrol>
                    </tabbody>

                    <tabbody pid="tabsEdit" id="12">
                        <formbox id="frmAdvanced">
                            <layouttable>
                                <layouttablerow>
                                    <layouttablecell>
                                        <label text="Minutes" />
                                    </layouttablecell>
                                    <layouttablecell>
                                        <textinput id="m" name="m" />
                                    </layouttablecell>
                                </layouttablerow>
                                <layouttablerow>
                                    <layouttablecell>
                                        <label text="Hours" />
                                    </layouttablecell>
                                    <layouttablecell>
                                        <textinput id="h" name="h" />
                                    </layouttablecell>
                                </layouttablerow>
                                <layouttablerow>
                                    <layouttablecell>
                                        <label text="Days of month" />
                                    </layouttablecell>
                                    <layouttablecell>
                                        <textinput id="dom" name="dom" />
                                    </layouttablecell>
                                </layouttablerow>
                                <layouttablerow>
                                    <layouttablecell>
                                        <label text="Months" />
                                    </layouttablecell>
                                    <layouttablecell>
                                        <textinput id="mon" name="mon" />
                                    </layouttablecell>
                                </layouttablerow>
                                <layouttablerow>
                                    <layouttablecell>
                                        <label text="Days of week" />
                                    </layouttablecell>
                                    <layouttablecell>
                                        <textinput id="dow" name="dow" />
                                    </layouttablecell>
                                </layouttablerow>
                                <layouttablerow>
                                    <layouttablecell>
                                        <label text="Command" />
                                    </layouttablecell>
                                    <layouttablecell>
                                        <textinput id="a_command" name="a_command" />
                                    </layouttablecell>
                                </layouttablerow>
                            </layouttable>
                        </formbox>
                    </tabbody>

                   <tabbody pid="tabsEdit" id="13">
                       <formbox id="frmSpecial">
                        <layouttable>
                                <layouttablerow>
                                    <layouttablecell>
                                        <radio value='reboot' text='On reboot' id='rreboot' name='special' />
                                    </layouttablecell>
                                    <layouttablecell>
                                        <radio value='hourly' text='Hourly' id='rhourly' name='special' />
                                    </layouttablecell>
                            </layouttablerow>
                            <layouttablerow>
                                    <layouttablecell>
                                        <radio value='daily' text='Daily' id='rdaily' name='special' />
                                    </layouttablecell>
                                    <layouttablecell>
                                        <radio value='weekly' text='Weekly' id='rweekly' name='special' />
                                    </layouttablecell>
                            </layouttablerow>
                            <layouttablerow>
                                    <layouttablecell>
                                        <radio value='monthly' text='Monthly' id='rmonthly' name='special' />
                                    </layouttablecell>
                                    <layouttablecell>
                                        <radio value='yearly' text='Yearly' id='ryearly' name='special' />
                                    </layouttablecell>
                            </layouttablerow>
                            <layouttablerow>
                                    <layouttablecell>
                                        <label text="Command" />
                                    </layouttablecell>
                                    <layouttablecell>
                                        <textinput id="s_command" name="s_command" />
                                    </layouttablecell>
                            </layouttablerow>
                        </layouttable>
                       </formbox>
                    </tabbody>
            </tabcontrol>

        </dialogbox>


        <dialogbox id="dlgEditOther" title='Edit non-task string'>
            <vcontainer>
                <label text="Edit string"/>
                <textinput id="other_str" name="other_str" />
            </vcontainer>
        </dialogbox>
    </pad>
</xml>
